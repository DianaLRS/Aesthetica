<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                {{> _sidenav }}
            </div>
        </div>
        <div class="row" id="pic-holder">
            <div class="col-sm-3">
                <h1 id="welcome" data-user-id="1">Welcome</h1>
            </div>
            <div class="col-sm-9">
                {{!-- Importan UserID to be passed when favorite button is clicked --}}

                {{!-- Important UserID to be passed when favorite button is clicked --}}
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Women's
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <button class="dropdown-item women" type="button" id="Apparel"> All Apparel</button>
                        <button class="dropdown-item women" type="button" id="Top">Tops/Shirts</button>
                        <button class="dropdown-item women" type="button" id="Pants">Pants/Bottoms</button>
                        <button class="dropdown-item women" type="button" id="Dresses">Dresses</button>
                        <button class="dropdown-item women" type="button" id="Skirts">Skirts</button>
                        <button class="dropdown-item women" type="button" id="Coats">Coats</button>
                        <button class="dropdown-item women" type="button" id="Jackets">Jackets</button>
                        <button class="dropdown-item women" type="button" id="Sporty">SportsWear</button>
                        <button class="dropdown-item women" type="button" id="Swim">Swimsuits/Bikinis</button>
                        <button class="dropdown-item women" type="button" id="Lingerie">Lingerie/Intimates</button>
                        <button class="dropdown-item women" type="button" id="Accessories">Accessories</button>
                        <button class="dropdown-item women" type="button" id="Shoes">Shoes</button>
                    </div>
                    <div>
                        <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Men's
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <button class="dropdown-item men" type="button" id="apparel">All Apparel</button>
                            <button class="dropdown-item men" type="button" id="tops">Tops/Shirts</button>
                            <button class="dropdown-item men" type="button" id="pants">Pants/Bottoms</button>
                            <button class="dropdown-item men" type="button" id="suits">Suits</button>
                            <button class="dropdown-item men" type="button" id="coats">Coats</button>
                            <button class="dropdown-item men" type="button" id="jackets">Jackets</button>
                            <button class="dropdown-item men" type="button" id="sporty">SportsWear</button>
                            <button class="dropdown-item men" type="button" id="swim">Swimsuits</button>
                            <button class="dropdown-item men" type="button" id="lingerie">Underwear</button>
                            <button class="dropdown-item men" type="button" id="accessories">Accessories</button>
                            <button class="dropdown-item men" type="button" id="shoes">Shoes</button>
                        </div>
                    </div>
                        <form class="form-inline my-2 my-lg-0" id="explore-form">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"
                                id="explore-bar">
                            <button class="btn btn-outline-success-dark my-2 my-sm-0" id="explore"
                                type="submit">Explore</button>
                        </form>
                </div>
            </div>
            <div>
                <div class="row">
                    {{#each photos}}
                    <div class="col-sm-3">
                        <img src="{{imageURL}}" alt="" class="w-100">
                        <button type="button" class="btn btn-dark" id="favorite">Add To Closet</button>
                        <button type="button" class="btn btn-dark" id="unfavorite">Remove</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>